extends ../base

block content
  div
    video#preview
    button#actionBtn Start Recording
  if errorMessage
    span=errorMessage
  form(method="POST" enctype="multipart/form-data")
    label(for="video") Video File
    input(type="file" id="video" accept="video/*" required name="video")
    label(for="thumbnail") Thumbnail File
    input(type="file" id="thumbnail" accept="image/*" required name="thumb")
    input(name="title" placeholder="Title" required type="text" maxlength=80)
    input(name="description" placeholder="Description" required type="text" minlength=20)
    input(name="hashtags" placeholder="Hastags, seperated by comma." required type="text")
    button(type="submit") Upload Video

block scripts
  script(src="/static/js/recorder.js")