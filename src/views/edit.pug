extends base.pug

block content
  h4 Change Title of video
  form(method="POST")
    input(name="title" placeholder="Title" required type="text" maxlength=80 value=video.title)
    input(name="description" placeholder="Description" required type="text" minlength=20 value=video.description)
    input(name="hashtags" placeholder="Hastags, seperated by comma." required type="text" value=video.hashtags.join())
    button(type="submit") Save
